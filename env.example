# PrivateGPT Legal AI - Environment Configuration

# Environment
ENVIRONMENT=production
COMPOSE_PROJECT_NAME=privategpt

# Security Configuration
JWT_SECRET_KEY=admin123456789abcdef
JWT_EXPIRY_HOURS=8
BCRYPT_ROUNDS=12

# Default Admin Account
DEFAULT_ADMIN_EMAIL=admin@admin.com
DEFAULT_ADMIN_PASSWORD=admin

# Weaviate Configuration
WEAVIATE_API_KEY=admin
WEAVIATE_API_USERS=admin

# n8n Configuration
N8N_USER=admin
N8N_PASSWORD=admin

# Monitoring Passwords
GRAFANA_ADMIN_PASSWORD=admin

# Model Configuration
# Set MODEL_MODE to "dev" or "prod" to choose which model to use
MODEL_MODE=dev
OLLAMA_MODEL_DEV=llama3.2:8b
OLLAMA_MODEL_PROD=llama3.1:70b

# Resource Limits
STREAMLIT_MAX_UPLOAD_SIZE=200
WEAVIATE_QUERY_LIMIT=25

# Logging Configuration
LOG_LEVEL=INFO
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years for legal compliance

# Legal Compliance
CLIENT_DATA_ENCRYPTION=true
AUDIT_TRAIL_ENABLED=true
PII_REDACTION_ENABLED=true 